package main

import (
	"fmt"
	"log"
	"net/http"

	"github.com/rur/treetop"

	"{{ .Namespace }}/app"
	"{{ .Namespace }}/page"
	"{{ $.Namespace }}/page/{{ .PageName }}"
)

var (
	addr = ":8000"
)

func main() {
	m := http.NewServeMux()

	server := app.NewServer()

	renderer := treetop.NewRenderer(treetop.DefaultTemplateExec)
	{{ .PageName }}.Routes(
		page.NewContext(server),
		page.StandardMux{Mux: m},
		renderer,
	)

	fmt.Printf("Starting {{ $.Namespace }} server at %s", addr)
	// Bind to an addr and pass our router in
	log.Fatal(http.ListenAndServe(addr, m))
}

